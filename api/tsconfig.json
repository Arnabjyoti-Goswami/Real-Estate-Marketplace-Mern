{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"],
      "@routes/*": ["routes/*"],
    },
  },
  "include": [
    "src/controllers/**/*.ts",
    "src/**/*.ts",
  ],
}